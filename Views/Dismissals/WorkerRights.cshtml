@section Scripts {
    @{
        var jsonLdModel = new JsonLdModel
        {
            Headline = ViewData["Title"].ToString(),
            Description = ViewData["Description"].ToString(),
            Keywords = ViewData["Keywords"].ToString(),
            ImageName = "services/WorkerRights.jpeg", 
            Category = "Derechos del trabajador",     
            ArticleBody = "Este artículo ofrece una guía esencial sobre cómo actuar tras sufrir un accidente de tránsito. Nuestro estudio jurídico, compuesto por abogados y profesionales médicos de primer nivel, se especializa en la gestión de reclamos por accidentes de tránsito, incluyendo aquellos en los que el afectado es peatón, conductor o pasajero. Destacamos la importancia de anotar los datos del vehículo involucrado, tomar fotografías del lugar y buscar asistencia médica inmediata, incluso si las lesiones parecen leves. Además, proporcionamos herramientas para calcular orientativamente la indemnización correspondiente y estamos disponibles para consultas sin compromiso."
        };
    }
    
    @Html.Partial("_ArticleJsonLdSchema", jsonLdModel)

  }
