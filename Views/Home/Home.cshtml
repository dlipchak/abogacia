  {
      "@@context": "https://schema.org",
      "@@type": "LegalService",
      "name": "Estudio Jurídico López Giacomelli",
      "url": "https://estudiolopezgiacomelli.com.ar/",
      "description": "Estudio Jurídico especializado en accidentes de tránsito, laborales y despidos.",
      "address": {
          "@@type": "PostalAddress",
          "streetAddress": "Juana Manso 1113, 7mo piso",
          "addressLocality": "Buenos Aires",
          "addressRegion": "CABA",
          "postalCode": "1107",
          "addressCountry": "AR"
      },
      "telephone": "+54 11 6198 0179",
      "areaServed": {
          "@@type": "Place",
          "name": "Buenos Aires, Argentina"
      },
      "aggregateRating": {
          "@@type": "AggregateRating",
          "ratingValue": "4.8",
          "reviewCount": "37"
      },
      "openingHours": "Mo-Fr 09:00-18:00",
      "serviceType": ["Accidentes de Tránsito", "Accidentes Laborales", "Derecho Laboral", "Despidos", "Asesoría en Reclamos de Indemnización"]
  }
  </script>
  
