<!-- Content -->
<section id="content">
	<div class="container">
		<div class="row justify-content-center text-center mt-6">
			<div class="col-lg-8">
				<div class="error-404">
					<h2 class="display-1">404</h2>
					<h4>Lo sentimos, la página que está buscando no existe.</h4>
					<p class="mb-4">La página que está intentando acceder puede haber sido eliminada, movida o no existe. 
					   Por favor, verifique la URL o regrese a la página principal.</p>
					<a href="/" class="btn btn-primary">Volver al Inicio</a>
				</div>
			</div>
		</div>
	</div>
</section>

<script type="application/ld+json">
{
	"@@context": "https://schema.org",
	"@@type": "WebPage",
	"name": "Página no encontrada - Error 404",
	"description": "Lo sentimos, la página que está buscando no existe.",
	"url": "@($"{Context.Request.Scheme}://{Context.Request.Host}{Context.Request.Path}")",
	"publisher": {
		"@@type": "Organization",
		"name": "Estudio Jurídico López Giacomelli",
		"url": "https://estudiolopezgiacomelli.com.ar",
		"logo": {
			"@@type": "ImageObject",
			"url": "https://estudiolopezgiacomelli.com.ar/images/logo.png"
		}
	}
}
</script>

@section Scripts {
